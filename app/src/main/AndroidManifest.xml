<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.louis.guobase">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:theme="@style/login_theme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/theme_MainActivity" />
        <activity
            android:name=".TableInfo"
            android:screenOrientation="landscape"
            android:theme="@style/login_theme" />
        <activity
            android:name=".TableDesc"
            android:screenOrientation="landscape"
            android:theme="@style/login_theme" />
        <activity
            android:name=".MidyTableActivity"
            android:screenOrientation="landscape"
            android:theme="@style/login_theme" />
        <activity android:name=".MD5Activity"
            android:theme="@style/login_theme"
            ></activity>
    </application>

</manifest>